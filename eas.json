{
  "cli": {
    "version": ">= 5.9.1",
    "promptToConfigurePushNotifications": false,
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "image": "latest"
      },
      "env": {
        "APP_ENV": "preview",
        "GRADLE_OPTS": "-Xmx4096m -XX:MaxMetaspaceSize=512m"
      }
    },
    "production": {
      "ios": {
        "autoIncrement": true
      },
      "android": {
        "autoIncrement": true,
        "buildType": "app-bundle"
      },
      "env": {
        "APP_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "{{EXPO_APPLE_ID}}",
        "ascAppId": "{{EXPO_APP_ID}}",
        "appleTeamId": "{{EXPO_TEAM_ID}}"
      },
      "android": {
        "serviceAccountKeyPath": "/tmp/google-play-key.json",
        "track": "production"
      }
    }
  }
}
